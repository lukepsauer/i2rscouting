<div class="ui active small modal" style="top: 25%">
<h1 class="text-center">Log In</h1>
<form class="ui form" action="/user/authenticate" method="post">
  <div class="field">
  <label>Name</label>
  <input name="username" type="text" id="username" placeholder="Name">
  </div>
  <div class="field">
    <label>Password</label>
    <input name="password" type="password" id="password" placeholder="Password">
  </div>
  <button class="ui button" type="submit">Log In</button>
</form>
</div>
<script>
  $('.ui.form').form({
            on: 'blur',
            fields: {
              username: {
                identifier: 'username',
                rules: [
                  {
                    type   : 'empty',
                    prompt : 'Please enter your name'
                  }
                ]
              },
              password: {
                identifier: 'password',
                rules: [
                  {
                    type: 'empty',
                    prompt: 'Please enter a password'
                  }
                ]
              }
          }});
</script>